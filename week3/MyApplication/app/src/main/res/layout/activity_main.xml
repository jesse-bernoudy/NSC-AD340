<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:columnCount="2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:rowCount="3"
    tools:context="com.ad340.nsc.soundapplication.MainActivity">

    <TextView
        android:id="@+id/text_view_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Hello, please record a message."
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/image_record"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_above="@+id/button_play"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_btn_speak_now"
        android:tint="#7f7f7f" />

    <Button
        android:id="@+id/button_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/image_record"
        android:layout_alignStart="@+id/image_record"
        android:layout_centerVertical="true"
        android:layout_marginTop="24dp"
        android:paddingBottom="16dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="16dp"
        android:text="Play"
        android:textSize="24dp" />

</RelativeLayout>
